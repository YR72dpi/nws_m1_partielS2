<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://unpkg.com/mvp.css">
    <style>
        body,
        html {
            padding: 15px;
        }
    </style>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <header>
        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Accueil</a></li>

                <li><a href="{{ path('app_event') }}">Event</a></li>
                <li><a href="{{ path('app_manager') }}">Manager</a></li>
                <li><a href="{{ path('app_sponsor') }}">Sponsor</a></li>

                <li><a href="{{ path('app_register_user') }}">Inscription utilisateur</a></li>
                <li><a href="{{ path('app_register_manager') }}">Inscription manager</a></li>
                <li><a href="{{ path('app_register_sponsor') }}">Inscription sponsor</a></li>
                
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
                {% if app.user %}
                <li>
                    <form method="post" action="/logout" style="display:inline;">
                        <button type="submit">Déconnexion</button>
                    </form>
                </li>
                {% endif %}
                {# Ajoutez d'autres routes ici si besoin #}
            </ul>
        </nav>
    </header>
    {% block body %}{% endblock %}
</body>

</html>